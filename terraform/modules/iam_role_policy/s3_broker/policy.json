{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:${aws_partition}:s3:::${bucket_prefix}-*",
        "arn:${aws_partition}:s3:::${bucket_prefix}-*/*"
      ]
    },
    {
      "Action": [
        "iam:GetUser",
        "iam:CreateUser",
        "iam:DeleteUser",
        "iam:ListAccessKeys",
        "iam:CreateAccessKey",
        "iam:DeleteAccessKey",
        "iam:CreatePolicy",
        "iam:DeletePolicy",
        "iam:ListAttachedUserPolicies",
        "iam:AttachUserPolicy",
        "iam:DetachUserPolicy"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:${aws_partition}:iam::${account_id}:user${iam_path}*",
        "arn:${aws_partition}:iam::${account_id}:policy${iam_path}",
        "arn:${aws_partition}:iam::${account_id}:policy${iam_path}*"
      ]
    }
  ]
}
