{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketAcl",
        "s3:GetBucketLocation",
        "s3:GetBucketNotification",
        "s3:GetBucketPolicy",
        "s3:GetBucketRequestPayment",
        "s3:GetBucketVersioning",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:GetObjectVersion",
        "s3:GetObjectVersionAcl",
        "s3:ListBucket",
        "s3:ListBucketMultipartUploads",
        "s3:ListBucketVersions",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:${aws_partition}:s3:::${varz_bucket}",
        "arn:${aws_partition}:s3:::${varz_bucket}/*",
        "arn:${aws_partition}:s3:::${varz_staging_bucket}",
        "arn:${aws_partition}:s3:::${varz_staging_bucket}/*",
        "arn:${aws_partition}:s3:::${bosh_release_bucket}",
        "arn:${aws_partition}:s3:::${bosh_release_bucket}/*",
        "arn:${aws_partition}:s3:::${stemcell_bucket}",
        "arn:${aws_partition}:s3:::${stemcell_bucket}/*",
        "arn:${aws_partition}:s3:::${terraform_state_bucket}",
        "arn:${aws_partition}:s3:::${terraform_state_bucket}/*",
        "arn:${aws_partition}:s3:::${semver_bucket}",
        "arn:${aws_partition}:s3:::${semver_bucket}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:PutObjectVersionAcl"
      ],
      "Resource": [
        "arn:${aws_partition}:s3:::${semver_bucket}",
        "arn:${aws_partition}:s3:::${semver_bucket}/*",
        "arn:${aws_partition}:s3:::${billing_bucket}",
        "arn:${aws_partition}:s3:::${billing_bucket}/*",
        "arn:${aws_partition}:s3:::${varz_bucket}/master-bosh-state.json",
        "arn:${aws_partition}:s3:::${terraform_state_bucket}/*"
      ]
    }
  ]
}
